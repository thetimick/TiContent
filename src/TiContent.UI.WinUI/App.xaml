<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="TiContent.UI.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TiContent.UI.WinUI.Components.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Components/UI/Styles/CardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:ViewStateToVisibilityConverter x:Key="ViewStateToVisibilityConverter" />
            <converters:VoteToColorConverter x:Key="VoteToColorConverter" />
            <converters:ByteSizeToStringConverter x:Key="ByteSizeToStringConverter" />
            <converters:IntLimitToStringConverter x:Key="IntLimitToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
