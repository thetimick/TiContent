<Page
    x:Class="TiContent.Windows.Main.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:TiContent.Resources.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:TiContent.ViewModels.Main.Pages"
    d:DataContext="{d:DesignInstance Type=vm:HomePageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <ui:Grid Margin="16,0,16,16" RowDefinitions="Auto, *">
        <ui:Grid Grid.Row="0" ColumnDefinitions="4*, *">
            <ui:TextBox
                Grid.Column="0"
                Icon="{ui:SymbolIcon Search24}"
                PlaceholderText="Здесь пока ничего нет..."
                Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox
                Grid.Column="2"
                Margin="4,0,0,0"
                FontSize="14"
                FontWeight="SemiBold"
                SelectedIndex="{Binding TypeIndex}">

                <ComboBoxItem
                    Content="Фильмы &amp; Сериалы"
                    FontSize="14"
                    FontWeight="SemiBold" />

                <ComboBoxItem
                    Content="Игры"
                    FontSize="14"
                    FontWeight="SemiBold" />
            </ComboBox>
        </ui:Grid>

        <!--  Content  -->
        <ui:DataGrid
            Grid.Row="1"
            Margin="0,4,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="True"
            CanUserResizeRows="False"
            CanUserSortColumns="True"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            ItemsSource="{Binding Items, Mode=TwoWay}"
            SelectionMode="Single"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}}">

            <ui:DataGrid.Columns>
                <DataGridTemplateColumn
                    Width="Auto"
                    CanUserReorder="False"
                    CanUserResize="False"
                    CanUserSort="False">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:HyperlinkButton
                                Width="32"
                                Height="32"
                                Margin="0,0,4,0"
                                Padding="8,0,0,0"
                                CornerRadius="16"
                                Icon="{ui:SymbolIcon Shapes16}"
                                NavigateUri="{Binding Magnet}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Width="*"
                    Header="Название"
                    SortMemberPath="Title">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:StackPanel
                                Margin="0,4,0,4"
                                Orientation="Vertical"
                                Spacing="2">

                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="{Binding Title}"
                                    TextWrapping="Wrap" />

                                <ui:TextBlock
                                    Appearance="Tertiary"
                                    FontTypography="Caption"
                                    Text="{Binding AggregatedDescription}" />
                            </ui:StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CreateTime, Converter={StaticResource DateTimeToStringConverter}, ConverterParameter='dd.MM.yyyy'}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Header="Дата" />

                <DataGridTemplateColumn
                    Width="Auto"
                    Header="Сиды &amp; Пиры"
                    SortMemberPath="Sid">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:StackPanel
                                Margin="12"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="4">

                                <ui:StackPanel Orientation="Horizontal" Spacing="2">
                                    <ui:SymbolIcon Symbol="ArrowUp24" />
                                    <ui:TextBlock FontTypography="BodyStrong" Text="{Binding Sid}" />
                                </ui:StackPanel>

                                <ui:StackPanel Orientation="Horizontal" Spacing="2">
                                    <ui:SymbolIcon Symbol="ArrowDown24" />
                                    <ui:TextBlock FontTypography="BodyStrong" Text="{Binding Pir}" />
                                </ui:StackPanel>
                            </ui:StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Size, Converter={StaticResource ByteSizeToStringConverter}}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Header="Размер"
                    SortMemberPath="Size.Bytes" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>

        <!--  Empty  -->
        <ui:TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Appearance="Tertiary"
            FontTypography="Subtitle"
            Text="{x:Static loc:Strings.HomePage_Empty}"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}, ConverterParameter='empty'}" />

        <!--  InProgress  -->
        <ui:StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="16"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}, ConverterParameter='progress'}">

            <ui:ProgressRing
                Width="54"
                Height="54"
                VerticalAlignment="Center"
                IsIndeterminate="True" />

            <ui:TextBlock
                VerticalAlignment="Center"
                Appearance="Tertiary"
                FontTypography="Subtitle"
                Text="{x:Static loc:Strings.HomePage_InProgress}"
                TextWrapping="Wrap" />
        </ui:StackPanel>
    </ui:Grid>
</Page>
