<Page
    x:Class="TiContent.Windows.Pages.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:TiContent.Resources.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:TiContent.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:GamesPageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <ui:Grid Margin="16,0,16,16" ColumnDefinitions="4*, Auto, *">

        <!--  Content  -->
        <ItemsControl
            Grid.Column="0"
            Margin="0,4,0,0"
            ItemsSource="{Binding Items}"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}}">

            <ItemsControl.Template>
                <ControlTemplate>
                    <ui:DynamicScrollViewer
                        Padding="{TemplateBinding Padding}"
                        HorizontalScrollBarVisibility="Disabled"
                        ScrollChanged="ScrollViewer_OnScrollChanged"
                        VerticalScrollBarVisibility="Auto">

                        <ItemsPresenter />
                    </ui:DynamicScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction Margin="0,0,0,4" IsChevronVisible="False">
                        <ui:StackPanel Orientation="Horizontal" Spacing="8">
                            <ui:Image
                                Width="230"
                                Height="108"
                                CornerRadius="8"
                                Source="{Binding LibraryImageUrl}"
                                Stretch="UniformToFill" />

                            <ui:StackPanel>
                                <ui:TextBlock
                                    FontTypography="Subtitle"
                                    Text="{Binding Title}"
                                    TextWrapping="Wrap" />

                                <ui:TextBlock
                                    Appearance="Tertiary"
                                    FontTypography="Caption"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </ui:StackPanel>
                        </ui:StackPanel>
                    </ui:CardAction>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  Empty  -->
        <ui:TextBlock
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Appearance="Tertiary"
            FontTypography="Subtitle"
            Text="{x:Static loc:Strings.HomePage_Empty}"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}, ConverterParameter='empty'}" />

        <!--  InProgress  -->
        <ui:StackPanel
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="16"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}, ConverterParameter='progress'}">

            <ui:ProgressRing
                Width="48"
                Height="48"
                VerticalAlignment="Center"
                IsIndeterminate="True" />

            <ui:TextBlock
                VerticalAlignment="Center"
                Appearance="Tertiary"
                FontTypography="Subtitle"
                Text="{x:Static loc:Strings.HomePage_InProgress}"
                TextWrapping="Wrap" />
        </ui:StackPanel>

        <!--  Splitter  -->
        <GridSplitter
            Grid.Column="1"
            Width="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Filters  -->
        <ui:Grid
            Grid.Column="2"
            Margin="0,4,0,0"
            RowDefinitions="Auto, *">

            <!--  Search  -->
            <ui:TextBox
                Grid.Row="0"
                Icon="{ui:SymbolIcon Search24}"
                PlaceholderText="Поиск по каталогу..."
                Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Filters  -->
            <ui:Card
                Grid.Row="1"
                Margin="0,4,0,0"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">

                <ui:TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Appearance="Tertiary"
                    FontTypography="BodyStrong"
                    Text="Здесь когда-нибудь будут фильтры..."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </ui:Card>
        </ui:Grid>
    </ui:Grid>
</Page>
