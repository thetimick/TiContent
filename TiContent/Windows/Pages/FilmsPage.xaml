<Page
    x:Class="TiContent.Windows.Pages.FilmsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:TiContent.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:FilmsPageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <ui:Grid Margin="16,0,16,16" ColumnDefinitions="4*, Auto, *">
        <!--  Content  -->
        <ItemsControl
            Grid.Column="0"
            Margin="0,4,0,0"
            ItemsSource="{Binding Items}"
            Visibility="{Binding ViewState, Converter={StaticResource ViewStateToVisibilityConverter}}">

            <ItemsControl.Template>
                <ControlTemplate>
                    <ui:DynamicScrollViewer
                        Padding="{TemplateBinding Padding}"
                        HorizontalScrollBarVisibility="Disabled"
                        ScrollChanged="ScrollViewer_OnScrollChanged"
                        VerticalScrollBarVisibility="Auto">

                        <ItemsPresenter />
                    </ui:DynamicScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction Margin="0,0,0,4" IsChevronVisible="False">
                        <ui:AutoGrid ColumnDefinitions="*, Auto, Auto" RowCount="2">
                            <ui:AutoGrid
                                Grid.Row="0"
                                Grid.Column="0"
                                ColumnDefinitions="Auto, *">

                                <ui:Image
                                    Grid.Column="0"
                                    Width="100"
                                    Height="142"
                                    Margin="0,0,8,0"
                                    CornerRadius="8"
                                    Source="{Binding PosterPath, Converter={StaticResource TMDBPosterPathConverter}}"
                                    Stretch="Fill" />

                                <ui:AutoGrid Grid.Column="1" RowCount="3">
                                    <ui:TextBlock
                                        Grid.Row="0"
                                        FontTypography="Subtitle"
                                        Text="{Binding Title}" />

                                    <ui:TextBlock
                                        Grid.Row="1"
                                        Appearance="Tertiary"
                                        FontTypography="Caption"
                                        Text="{Binding OriginalTitle}" />

                                    <ui:TextBlock
                                        Grid.Row="2"
                                        MaxHeight="58"
                                        Margin="0,4,0,0"
                                        Appearance="Tertiary"
                                        FontTypography="Caption"
                                        Text="{Binding Overview}"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="Wrap"
                                        ToolTip="{Binding Overview}" />
                                </ui:AutoGrid>
                            </ui:AutoGrid>

                            <Separator Grid.Column="1" Margin="4,0,8,0" />

                            <ui:StackPanel
                                Grid.Column="2"
                                Margin="0,8,0,0"
                                VerticalAlignment="Center"
                                Orientation="Vertical"
                                Spacing="4">

                                <ui:DropDownButton
                                    Height="32"
                                    CornerRadius="16"
                                    Icon="{ui:SymbolIcon Symbol=Share24}">

                                    <ui:DropDownButton.Flyout>
                                        <ContextMenu>
                                            <MenuItem Header="Google" Icon="{ui:SymbolIcon Symbol=Open24}" />
                                            <MenuItem Header="The Movie Database" Icon="{ui:SymbolIcon Symbol=Open24}" />
                                            <MenuItem Header="iMDB" Icon="{ui:SymbolIcon Symbol=Open24}" />
                                        </ContextMenu>
                                    </ui:DropDownButton.Flyout>
                                </ui:DropDownButton>

                                <ui:DropDownButton
                                    Height="32"
                                    CornerRadius="16"
                                    Icon="{ui:SymbolIcon Symbol=Merge24}">

                                    <ui:DropDownButton.Flyout>
                                        <ContextMenu>
                                            <MenuItem Header="Jacred" Icon="{ui:SymbolIcon Symbol=Open24}" />
                                        </ContextMenu>
                                    </ui:DropDownButton.Flyout>
                                </ui:DropDownButton>
                            </ui:StackPanel>
                        </ui:AutoGrid>
                    </ui:CardAction>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  Splitter  -->
        <GridSplitter
            Grid.Column="1"
            Width="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Filters  -->
        <ui:Grid
            Grid.Column="2"
            Margin="0,4,0,0"
            RowDefinitions="Auto, *">

            <!--  Search  -->
            <ui:TextBox
                Grid.Row="0"
                Icon="{ui:SymbolIcon Search24}"
                PlaceholderText="Поиск по каталогу..."
                Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Filters  -->
            <ui:Card
                Grid.Row="1"
                Margin="0,4,0,0"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">

                <ui:TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Appearance="Tertiary"
                    FontTypography="BodyStrong"
                    Text="Здесь когда-нибудь будут фильтры..."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </ui:Card>
        </ui:Grid>
    </ui:Grid>
</Page>
