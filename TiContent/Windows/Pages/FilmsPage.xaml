<Page
    x:Class="TiContent.Windows.Pages.FilmsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:TiContent.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:FilmsPageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <ui:Grid Margin="16,0,16,16" ColumnDefinitions="4*, Auto, *">
        <ui:TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Hello, World!" />

        <!--  Splitter  -->
        <GridSplitter
            Grid.Column="1"
            Width="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Filters  -->
        <ui:Grid
            Grid.Column="2"
            Margin="0,4,0,0"
            RowDefinitions="Auto, *">

            <!--  Search  -->
            <ui:TextBox
                Grid.Row="0"
                Icon="{ui:SymbolIcon Search24}"
                PlaceholderText="Поиск по каталогу..."
                Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Filters  -->
            <ui:Card
                Grid.Row="1"
                Margin="0,4,0,0"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">

                <ui:TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Appearance="Tertiary"
                    FontTypography="BodyStrong"
                    Text="Здесь когда-нибудь будут фильтры..."
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </ui:Card>
        </ui:Grid>
    </ui:Grid>
</Page>
